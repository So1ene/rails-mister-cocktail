<div class="navbar"><p><%= link_to "BACK", cocktails_path, class: "btn-navbar" %></p></div>

<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <li class="my-3"><%= dose.ingredient.name %> - <%= dose.description %>

        <%= link_to dose_path, method: 'delete' do %>
        <i class="fas fa-trash"></i>
        <% end %>

      </li>
    <% end %>
  </ul>
  <p><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn-navbar mt-5" %></p>
</div>
