<div class="container">
  <h1>Add a cocktail:</h1>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name, label: "Name of cocktail", placeholder: "example: Gin Tonic" %>
    <%= f.button :submit, 'Save', class: "btn btn-primary"%>
  <% end %>
  <br />
  <%= link_to "Cancel", cocktails_path, class: "btn btn-secondary" %>
</div>
